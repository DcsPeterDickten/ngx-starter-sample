{
  "name": "@dcs/ngx-starter",
  "version": "2.0.0",
  "description": "Sample project to show Angular project development at DCS FÃ¼rth",
  "main": "index.js",
  "scripts": {
    "compile": "webpack --config config/webpack.config.production.ts",
    "build":
      "cross-env TS_NODE_PROJECT=config/tsconfig.node.json run-s lint test:coverage compile docs",
    "build:production": "cross-env APP_ENV=production npm run build",
    "build:staging": "cross-env APP_ENV=staging npm run build",
    "watch":
      "cross-env TS_NODE_PROJECT=config/tsconfig.node.json webpack-dev-server --config webpack.config.ts",
    "serve": "serve dist -p 8080 -c 0 -s",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:e2e": "protractor protractor.conf.js",
    "test:selenium": "webdriver-manager update && webdriver-manager start",
    "lint": "tslint --project tsconfig.json --exclude 'node_modules/**/*.ts'",
    "docs":
      "typedoc --out dist/docs --excludeExternals --ignoreCompilerErrors --includeDeclarations --target ES6 --exclude 'spec/**/*.ts' --mode file ./src",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "precommit": "lint-staged",
    "commit": "git cz",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm run build:production",
    "version": "run-s  build:production changelog && git add CHANGELOG.md",
    "postversion": "git push --no-verify && git push --no-verify --tags",
    "backend:mock": "json-server mock/db.json --port 3001 --delay 200"
  },
  "keywords": [],
  "author": "Peter Dickten <peter.dickten@dcs-fuerth.de>",
  "license": "ISC",
  "devDependencies": {
    "@angular-devkit/build-optimizer": "^0.4.2",
    "@angular/compiler": "^5.2.6",
    "@angular/compiler-cli": "^5.2.6",
    "@ngtools/webpack": "^1.10.1",
    "@types/jasmine": "^2.8.6",
    "@types/jasminewd2": "^2.0.3",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/protractor": "^4.0.0",
    "@types/redux-immutable": "^3.0.38",
    "@types/webpack": "^3.8.8",
    "@types/webpack-merge": "^4.1.2",
    "autoprefixer": "^8.0.0",
    "clean-webpack-plugin": "^0.1.18",
    "codelyzer": "^4.1.0",
    "commitizen": "^2.9.6",
    "compression-webpack-plugin": "^1.1.8",
    "conventional-changelog-cli": "^1.3.15",
    "copy-webpack-plugin": "^4.4.2",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.10",
    "cz-conventional-changelog": "^2.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.9",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-immutable-matchers": "^2.0.1",
    "jest-preset-angular": "^5.2.0",
    "json-loader": "^0.5.7",
    "json-server": "^0.12.1",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "offline-plugin": "^4.9.0",
    "postcss-loader": "^2.1.1",
    "prettier": "^1.10.2",
    "protractor": "^5.3.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "serve": "^6.5.0",
    "style-loader": "^0.20.2",
    "to-string-loader": "^1.1.5",
    "ts-node": "^5.0.0",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.11.1",
    "typedoc": "^0.10.0",
    "typescript": "2.4.2",
    "uglify-es": "3.3.9",
    "uglifyjs-webpack-plugin": "1.2.2",
    "validate-commit-msg": "^2.14.0",
    "validator": "^9.4.1",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "@angular-redux/router": "^7.0.0",
    "@angular-redux/store": "^7.1.0",
    "@angular/animations": "^5.2.6",
    "@angular/common": "^5.2.6",
    "@angular/core": "^5.2.6",
    "@angular/forms": "^5.2.6",
    "@angular/platform-browser": "^5.2.6",
    "@angular/platform-browser-dynamic": "^5.2.6",
    "@angular/router": "^5.2.6",
    "@angularclass/hmr": "^2.1.3",
    "@dcs/ngx-utils": "2.0.0-rc.2",
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-solid": "^5.0.7",
    "@ngx-translate/core": "^9.1.1",
    "ajv": "^6.2.0",
    "auth0-js": "^9.3.2",
    "bootstrap": "^4.0.0",
    "classlist-polyfill": "^1.2.0",
    "console-polyfill": "^0.3.0",
    "core-js": "^2.5.3",
    "date-fns": "^2.0.0-alpha.7",
    "immutable": "^4.0.0-rc.9",
    "lorem-ipsum": "^1.0.4",
    "ng-pick-datetime": "^5.1.8",
    "normalizr": "^3.2.4",
    "redux": "^3.7.2",
    "redux-batched-actions": "^0.2.1",
    "redux-immutable": "^4.0.0",
    "redux-localstorage": "^0.4.1",
    "redux-logger": "^3.0.6",
    "redux-observable": "^0.18.0",
    "reselect": "^3.0.1",
    "rxjs": "^5.5.6",
    "sweetalert2": "^7.15.1",
    "transit-immutable-js": "^0.7.0",
    "transit-js": "^0.8.846",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.20"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/config/setup-jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "config/tsconfig.node.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "coverageDirectory": "report/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts}": ["prettier --write", "git add"]
  }
}
