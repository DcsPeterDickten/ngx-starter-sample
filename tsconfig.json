{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noEmitOnError": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["dom", "dom.iterable", "scripthost", "es2015", "es2016.array.include", "es2017.object"]
  }
}
